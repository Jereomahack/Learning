@model IEnumerable<Lightway_Academy_school_fee_application.Models.ClassTerm>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table table-bordered table-condensed table-striped table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClassName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClassName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "bt btn-warning btn-xs" })
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "bt btn-primary btn-xs" })
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "bt btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
