@model IEnumerable<Lightway_Academy_school_fee_application.Models.SchoolFee>

@{
    ViewBag.Title = "Index";
}

<div class="panel panel-primary">
    <div class="panel-heading">School Fess Payment Index</div>
    <div class="panel-body">
        @if (ViewBag.Message != null)
        {
            <div>
                <p style="font-size:20px;text-align:center"><b>Payment Statues: </b><span style="color:green">@ViewBag.Message</span></p>
            </div>
        }
        
        @using (Html.BeginForm("Index", "SchoolFees", FormMethod.Get))
        {
            <div class="panel panel-primary hidden-print">
                <div class="panel-heading">
                    <h3 class="panel-title">Search Box</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3">
                            RRR, Phone Number, Learner Name @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control input-sm" })
                        </div>
                        <div class="col-md-3">
                            <a style="color:red">From Date </a> @Html.TextBox("SearchStringFrom", ViewBag.FromCurrentFilter as string, new { @class = "form-control input-sm", type = "date" })
                        </div>
                        <div class="col-md-3">
                            <a style="color:red">To Date</a> @Html.TextBox("SearchStringTo", ViewBag.ToCurrentFilter as string, new { @class = "form-control input-sm", type = "date" })
                        </div>
                        <div class="col-md-3">
                            <br />
                            <input type="submit" value="Search" class="btn btn-primary btn-sm" />
                        </div>
                    </div>

                </div>
            </div>
        }
        <table class="table table-bordered table-condensed table-responsive table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NameOfStudent)
                </th>
                <th>
                   Class
                </th>
                <th>
                    Term
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Session)
                </th>
                <th>
                    Amount(NGN)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RRR)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Statues)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfPayment)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameOfStudent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassTerm)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Term)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Session)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RRR)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Statues)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfPayment)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "bt btn-warning btn-xs" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "bt btn-primary btn-xs" })*@
                        @Html.ActionLink("Verify", "Verify", new { id = item.Id }, new { @class = "bt btn-success btn-xs" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
